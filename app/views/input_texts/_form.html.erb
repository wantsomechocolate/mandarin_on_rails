<%= form_with model: input_text do |form| %>

	<!-- Icon -->
	<% if action == "edit"  %>
    <div>
      	<%= form.label "Icon" %>
		<div>	      	
	     	<% if input_text.avatar.attached? %>
	        	<img src="<%= (url_for(@input_text.avatar))%>">
	      	<% end %>
	      	<br />
	      	<%= form.file_field :avatar %>
	    </div>
    </div>
   	<% end %>
	<br>
	<br>

   	<!-- Title -->

   	<% if action == "edit"  %>
		<div>
			<%= form.label :title %>
			<%= form.text_field :title %>
			<% input_text.errors.full_messages_for(:title).each do |message| %>
				<div><%= message %></div>
			<% end %>
		</div>
		<br>
		<br>
	<% end %>

	<!-- Public -->
	<% if action == "edit"  %>
	<div>
		<%= form.label :public %>
		<%= form.check_box :public %>
	</div>
	<br>
	<br>
	<% end %>

	<!-- Body -->
	<div>
		

	  <% if action == "edit"  %>
		<%= form.label :body %>
		<%= form.text_area :body, :readonly => true %>
		<p>The body can not be edited because it would affect the shingles, create a new text instead. </p>
	  <% else %>
		<%= form.text_area :body %>
	  <% end %>


	    <% input_text.errors.full_messages_for(:body).each do |message| %>
	      <div><%= message %></div>
	    <% end %>
	</div>
	<br>
	<br>

	<!-- Created and Updated Dates -->
  	<% if action == "edit"  %>
		<div>
			<%= form.label :created_at %>
			<%= form.datetime_field :created_at, :readonly => true %>
		</div>
		<br>
		<br>

		<div>
			<%= form.label "Last Updated" %>
			<%= form.datetime_field :updated_at, :readonly => true %>
		</div>
		<br>
		<br>
  	<% end %>

  	<!-- Form Submit -->
	<div>
		<% if action == "edit"  %>
			<%= form.submit "Update", class: "button fit primary" %>
		<% else %>
			<%= form.submit "Process", class: "button fit primary" %>
		<% end %>
	</div>
<% end %>