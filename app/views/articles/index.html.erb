<section>
	<h1>Articles</h1>

	Our blog has <%= Article.public_count %> articles and counting!

	<ul>
		<% @articles.each do |article| %>
		  <% unless article.archived? %>
			<li>
				<!-- link to takes link text and then article -->
				<!-- article has a get route that maps to /articles/:id -->
				<!-- so link_to knows to call the article_path helper -->
				<!-- the article_path helper knows to fetch the ID for use in the link, because that's what the route says to do -->
				<%= link_to article.title, article %>
			</li>
		  <% end %>
		<% end %>
	</ul>


	<%= link_to "New Article", new_article_path %>
</section>